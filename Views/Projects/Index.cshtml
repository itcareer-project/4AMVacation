@model IEnumerable<Project_Vacation_Manager.Models.Project>
@{ViewData["Title"] = "Начало";}
<p><a asp-action="Create">Нов проект ;)</a></p>
<table class="table">
<thead>
<tr>
<th>@Html.DisplayNameFor(model => model.Title)</th>
<th>@Html.DisplayNameFor(model => model.Description)</th></tr>
</thead><tbody>
@foreach (var item in Model) {
<tr>
<td>@Html.DisplayFor(modelItem => item.Title)</td>
